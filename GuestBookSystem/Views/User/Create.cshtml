@model GuestBookSystem.Models.Guestbook

<ul class="nav nav-tabs">
    <li role="presentation"><a href="/User/AllWords">所有留言</a></li>
    <li role="presentation"><a href="/User/Create">添加留言</a></li>
    <li role="presentation"><a href="/User/MyWords">我的留言</a></li>
    <li role="presentation"><a href="/Account/Logout">退出登陆</a></li>

</ul>

<h2>留下你想说的话</h2>


<form action="/User/Create" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">留言人邮箱</label>
        @Html.EditorFor(g => g.AuthorEmail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(g => g.AuthorEmail)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">标题</label>
        @Html.EditorFor(g => g.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(g => g.Title)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">内容</label>
        @Html.TextAreaFor(g => g.Content, new {   @class = "form-control", @rows = "4" , @cols = "40" })
        @Html.ValidationMessageFor(g => g.Content)
    </div>
    <button type="submit" class="btn btn-success">发布</button>
</form>


@section scripts{
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
    
}