@model List<GuestBookSystem.Models.Guestbook>
@{
    ViewBag.Title = "AllWords";
}



<ul class="nav nav-tabs">
    <li role="presentation"><a href="/User/AllWords">所有留言</a></li>
    <li role="presentation"><a href="/User/Create">添加留言</a></li>
    <li role="presentation"><a href="/User/MyWords">我的留言</a></li>
    <li role="presentation"> @Html.ActionLink("退出登录", "Logout", "Account") </li>

</ul>
<h2>所有留言</h2>

@foreach (var gb in Model)
{
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
            @gb.Title
        </h3>
    </div>
    <div class="panel-body" style="background:linear-gradient(90deg, #a1c4fd 0%,#c2e9fb 100% );">
        <p>📫邮箱：@gb.AuthorEmail</p>
        <p>⏱时间：@gb.CreatedOn</p>
        <p>👉内容：@gb.Content</p>
    </div>
</div>
}