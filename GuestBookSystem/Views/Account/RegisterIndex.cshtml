@model GuestBookSystem.Models.User
@{
    ViewBag.Title = "RegisterIndex";
}




<h2>用户注册</h2>

<form action="/Account/Register" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">姓名</label>
        @Html.EditorFor(g => g.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(g => g.Name)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">邮箱</label>
        @Html.EditorFor(g => g.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(g => g.Email)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">密码</label>
        @Html.EditorFor(g => g.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(a => a.Password)
    </div>
    <button type="submit" class="btn btn-success">注册</button>
</form>


@section scripts{
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>

}