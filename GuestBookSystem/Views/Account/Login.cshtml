@model GuestBookSystem.Models.User

@{
    ViewBag.Title = "Login";
}





@using (Html.BeginForm())
{
    @Html.ValidationSummary()


    

<form class="text-center">
    <div class="form-group">
        <label for="exampleInputEmail1">用户名🤔</label>
        @Html.EditorFor(a => a.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(a => a.Name)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">密&nbsp;&nbsp;&nbsp;码🔒</label>
        @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(a => a.Password)
    </div>
    <button type="submit" class="btn btn-info" style="margin-right:130px;"> <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        登录
    </button>
    <button type="button" class="btn btn-success"   onclick="javascript:window.location.href='/Account/RegisterIndex'">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        注册
    </button>
</form>

}